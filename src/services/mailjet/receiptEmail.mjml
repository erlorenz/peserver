<mjml>
  <mj-body background-color="#ccd3e0" font-size="13px">
  <!-- Logo section -->
    <mj-section background-color="#fff" padding-bottom="20px" padding-top="50px">
      <mj-column width="100%">
        <mj-image src="https://svgshare.com/i/BSB.svg" alt="Press Express Logo" align="center" border="none" width="230px" padding-left="0px" padding-right="0px" padding-bottom="10px" padding-top="10px"></mj-image>
      </mj-column>
    </mj-section>
    <!-- Thank you section -->
        <mj-section background-color="#FFF" padding-bottom="40px" padding-top="0px">
      <mj-column width="100%">
        <mj-text align="center" color="#4a4a4a" font-size="30px" font-weight="bold" font-family="Helvetica" padding-left="25px" padding-right="25px" padding-bottom="0px" padding-top="0px">Thank you for your order!</mj-text>
      </mj-column>
    </mj-section>
    <!-- Customer section -->
    <mj-section background-color="#1D7A8C" padding-bottom="40px" padding-left="20px" padding-right="20px" padding-top="40px">
      <mj-column width="50%" padding-bottom="40px">
        <mj-text align="left" font-size="13px" color="#ABCDEA" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="10px" padding-top="0px">Customer Details: </mj-text>
        <mj-text align="left" font-size="16px" color="white" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="10px" padding-top="0px">{{ var:name }}</mj-text>
        <mj-text align="left" font-size="16px" color="white" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="10px" padding-top="0px">{{ var:phone }}</mj-text>
        <mj-text align="left" font-size="16px" color="white" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px" padding-top="0px">{{ var:email }}</mj-text>
      </mj-column>
            <mj-column width="50%">
        <mj-text align="left" font-size="13px" color="#ABCDEA" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="10px" padding-top="0px">Schedule Details: </mj-text>
        <mj-text align="left" font-size="16px" color="white" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="10px" padding-top="0px">{{ var:hotel }}</mj-text>
        <mj-text align="left" font-size="16px" color="white" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="10px" padding-top="0px">{{ var:room }}</mj-text>
        <mj-text align="left" font-size="16px" color="white" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="10px" padding-top="0px">Pickup after {{ var:pickup_date }}</mj-text>
        <mj-text align="left" font-size="16px" color="white" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px" padding-top="0px">Return by {{ var:return_date }}</mj-text>
      </mj-column>
    </mj-section>
