        <mj-text align="center" font-size="16px" color="white" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="10px" padding-top="0px">Pickup after [[pickup_date]]</mj-text>
        <mj-text align="center" font-size="16px" color="white" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="28px" padding-top="0px">Return by [[pickup_date]]</mj-text>
      </mj-column>
    </mj-section> -->
    <!-- Cart header section -->
        <mj-section background-color="#23A9C3" padding-bottom="10px" padding-top="40px">
      <mj-column>
        <mj-text align="center" color="#FFF" font-size="15px" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px"><strong>Item</strong></mj-text>
      </mj-column>
      <mj-column>
        <mj-text align="center" color="#FFF" font-size="15px" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px"><strong>Quantity</strong></mj-text>
      </mj-column>
      <mj-column>
        <mj-text align="center" color="#FFF" font-size="15px" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px"><strong>Subtotal</strong></mj-text>
      </mj-column>
    </mj-section>
    <!-- Cart body section -->
    <mj-section background-color="#23A9C3" padding-bottom="0px" padding-top="10px">
    <mj-raw>
        {% for item in var:customerOrderItems %}
    </mj-raw>
      <mj-column>
        <mj-text align="center" color="#FFF" font-size="13px" font-family="Helvetica" padding-left="25px" padding-right="25px" padding-bottom="20px" padding-top="0px">{{ item.description }}</mj-text>
      </mj-column>
      <mj-column>
        <mj-text align="center" color="#FFF" font-size="13px" font-family="Helvetica" padding-left="25px" padding-right="25px" padding-bottom="20px" padding-top="0px">{{ item.quantity }}</mj-text>
      </mj-column>
      <mj-column>
        <mj-text align="center" color="#FFF" font-size="13px" font-family="Helvetica" padding-left="25px" padding-right="25px" padding-bottom="20px" padding-top="0px">{{ item.subTotal }}</mj-text>
      </mj-column>
      <mj-raw>
        {% endfor %}
      </mj-raw>
    </mj-section>
    <mj-section background-color="#23A9C3" padding-bottom="40px">
      <mj-column>
        <mj-divider border-color="#fff" border-width="1px" border-style="solid" padding-left="20px" padding-right="20px" padding-bottom="0px" padding-top="0"></mj-divider>
        <mj-text align="right" color="#FFF" font-size="15px" font-family="Ubuntu, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="40px" padding-bottom="0px"><strong>Total: {{ var:total_price }}</strong></mj-text>
      </mj-column>
    </mj-section>

