    <mj-section background-color="#1D7A8C" padding-bottom="40px" padding-top="40px">
      <mj-column width="100%">
        <mj-text align="center" color="#FFF" font-size="15px" font-family="Helvetica" padding-left="25px" padding-right="25px" padding-bottom="20px" padding-top="0px">Feel free to contact us with any questions!</mj-text>
        <mj-text align="center" color="#FFF" font-size="15px" font-family="Helvetica" padding-left="25px" padding-right="25px" padding-bottom="10px" padding-top="0px">702-620-3315</mj-text>
        <mj-text align="center" color="#FFF" font-size="15px" font-family="Helvetica" padding-left="25px" padding-right="25px" padding-bottom="0px" padding-top="0px">support@PressExpressLV.com</mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
